  <script>
    // Tailwind script
    function initTailwind() {
      tailwind.config = {
        content: [],
        theme: { extend: { colors: { gold: '#d4af37' } } }
      }
    }
    initTailwind();

    // Gallery images (luxury London style)
    const galleryImages = [
      {url: "https://picsum.photos/id/1015/800/800", cat: "luxury"},
      {url: "https://picsum.photos/id/133/800/800", cat: "luxury"},
      {url: "https://picsum.photos/id/201/800/800", cat: "compact"},
      {url: "https://picsum.photos/id/251/800/800", cat: "luxury"},
      {url: "https://picsum.photos/id/316/800/800", cat: "compact"},
      {url: "https://picsum.photos/id/870/800/800", cat: "luxury"},
    ];

    function renderGallery(filter = 'all') {
      const grid = document.getElementById('galleryGrid');
      grid.innerHTML = '';
      galleryImages.forEach(img => {
        if (filter === 'all' || img.cat === filter) {
          const div = document.createElement('div');
          div.className = 'aspect-square overflow-hidden rounded-3xl cursor-pointer group';
          div.innerHTML = `<img src="${img.url}" class="w-full h-full object-cover group-hover:scale-110 transition duration-500" onclick="openLightbox('${img.url}')">`;
          grid.appendChild(div);
        }
      });
    }

    function filterGallery(cat) {
      document.querySelectorAll('#galleryGrid ~ button').forEach(b => b.classList.remove('active-filter'));
      renderGallery(cat);
    }

    function openLightbox(src) {
      document.getElementById('lightboxImg').src = src;
      document.getElementById('lightbox').classList.remove('hidden');
    }
    function closeLightbox() {
      document.getElementById('lightbox').classList.add('hidden');
    }

    // Simple Configurator
    const previews = [
      "https://picsum.photos/id/1015/800/800", // modern
      "https://picsum.photos/id/133/800/800",  // spa
      "https://picsum.photos/id/201/800/800"   // classic
    ];
    function changeStyle(n) {
      document.getElementById('preview').src = previews[n];
    }
    function changeMarble(n) {
      // could add more advanced overlay but this shows capability
      alert("Marble updated! (In full production version this would be live preview)");
    }

    // Swiper
    window.onload = () => {
      renderGallery('all');
      new Swiper('.testimonials', {
        loop: true,
        autoplay: { delay: 5000 },
        pagination: { el: '.swiper-pagination', clickable: true }
      });

      // Form
      document.getElementById('quoteForm').addEventListener('submit', (e) => {
        e.preventDefault();
        alert("‚úÖ Thank you! Our London team will call you within 2 hours with a tailored quote.");
      });
    };

    // Smooth scroll
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({ behavior: 'smooth' });
      });
    });
  </script>
